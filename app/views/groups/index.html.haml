%h1 グループ一覧

-# 新規作成フォーム
.new_group
  = form_for :group, url: { action: "create" } do |f|
    .field
      %ul
        %li.label= "Group"
        %li.text_field= f.text_field :name
    .actions
      %ul
        %li.submit= f.submit( t( "menu.create", default: "Create" ), "data-disable-with" => t( "menu.create", default: "Create" ) )

.groups
  - @groups.each{ |group|
  .group
    %h2= "#{group.default_flag == true ? "★" : ""} #{group.name}"
    = link_to 'Show', action: "show", id: group.id
    %ul
      - members = group.members.sort{ |a, b| a.created_at <=> b.created_at }
      - members.each{ |member|
      %li= link_to_unless( member.user.try(:screen_name).blank?, image_tag( member.user.try(:image), size: "20x20" ), "https://twitter.com/#!/#{member.user.try(:screen_name)}", target: "_blank" )
      -}
  - }