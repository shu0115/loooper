= form_for :item, url: { action: "update", id: @item.id } do |f|
  .field
    %ul
      %li.label= "やること"
      %li.text_field= f.text_field :name
  .field
    %ul
      %li.label= "Life"
      %li.number_field= f.number_field :life
  .field
    %ul
      %li.label= "メモ"
      %li.text_area= f.text_area :name
  .actions
    %ul
      %li.submit= f.submit t( "menu.update", default: "Update" ), disable_with: t( "menu.update", default: "Update" )
